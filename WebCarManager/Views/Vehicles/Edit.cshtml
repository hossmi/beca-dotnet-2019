@using CarManagement.Core.Models.DTOs
@using CarManagement.Core.Models
@model CarManagement.Core.Models.DTOs.VehicleDto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edición</h2>


@using (Html.BeginForm("Edit", "Vehicles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Vehículo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div>
                Matrícula:
            </div>
            <div>
                @Html.TextBoxFor(Model => Model.Enrollment.Serial) - @Html.TextBoxFor(Model => Model.Enrollment.Number, new { @readonly = "readonly", @Value = Model.Enrollment.Number.ToString("0000") })
            </div>
            <div>Color:</div>
            @Html.DropDownListFor(Model => Model.Color, new SelectList(Enum.GetValues(typeof(CarColor))))
            <hr />
            <p>Motor:</p>
            <div>
                Potencia: @Html.TextBoxFor(Model => Model.Engine.HorsePower) C.V.

            </div>
            <div>
                Encendido:   @Html.CheckBoxFor(Model => Model.Engine.IsStarted)

            </div>
            <hr />
            <p>Ruedas:</p>
            <div>
                <table border="1">
                    <tr>
                        <td>
                            Rueda
                        </td>
                        <td>
                            Presión
                        </td>
                    </tr>
                    @{int i = 1;}
                    @foreach (WheelDto wheel in this.Model.Wheels)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                            <td>
                                @Html.TextBoxFor(Model => Model.Wheels[i - 1].Pressure) Var
                            </td>
                        </tr>
                        i++;
                    }
                </table>
            </div>
            <hr />
            <p>Puertas:</p>
            <div>
                <table border="1">
                    <tr>
                        <td>
                            Puerta
                        </td>
                        <td>
                            Abierta
                        </td>
                    </tr>
                    @{int j = 1;}
                    @foreach (DoorDto door in this.Model.Doors)
                    {
                        <tr>
                            <td>
                                @j
                            </td>
                            <td>
                                @Html.CheckBoxFor(Model => Model.Doors[j - 1].IsOpen)
                            </td>
                        </tr>
                        j++;
                    }
                </table>
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a detalles", "Details", new {
                   serial = this.Model.Enrollment.Serial,
                   number = this.Model.Enrollment.Number }) |
    @Html.ActionLink("Volver a listado de mátriculas", "Prueba")
</div>
