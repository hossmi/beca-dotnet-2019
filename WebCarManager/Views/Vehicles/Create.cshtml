@using CarManagement.Core.Models
@model WebCarManager.Controllers.VehiclesController.NewVehicleData

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Creación</h2>


@using (Html.BeginForm("Create", "Vehicles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <h4>Vehículo</h4>
        <hr />
        <div>
            Color:
            @Html.DropDownListFor(Model => Model.Color, new SelectList(Enum.GetValues(typeof(CarColor))))
        </div>
        <hr />
        <div>
            Engine:
            Horse Power: @Html.TextBoxFor(Model => Model.HorsePower)
            IsStarted: @Html.CheckBoxFor(Model => Model.IsStarted)
        </div>

        Wheels: @Html.TextBoxFor(Model => Model.WheelCount)
        Wheels Pressure: @Html.TextBoxFor(Model => Model.Pressure)

        Doors: @Html.TextBoxFor(Model => Model.DoorCount)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Prueba")
</div>
