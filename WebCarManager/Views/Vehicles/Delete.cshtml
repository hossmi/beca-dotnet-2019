@using CarManagement.Core.Models;

@model CarManagement.Core.Models.IVehicle

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete vehicle</h2>

<h3>Are you sure you want to delete this vehicle?</h3>
<table class="table">
    <tr>
        <th>Enrollment</th>
        <th>HorsePower(KW)</th>
        <th>IsStarted</th>
        <th>Color</th>
        <th>Wheels(Atmosferas)</th>
        <th>Doors</th>

    </tr>
    <td>
        @string.Format("{0}-{1:0###}", Model.Enrollment.Serial, Model.Enrollment.Number)
    </td>
    <td>
        @string.Format("{0}", Model.Engine.HorsePower)
    </td>
    <td>
        @string.Format("{0}", Model.Engine.IsStarted)
    </td>
    <td>
        @string.Format("{0}", Model.Color)
    </td>
    <td>
        <ul>
            @foreach (IWheel wheel in Model.Wheels)
            {
                <li>
                    @string.Format("{0}", wheel.Pressure)
                </li>

            }

        </ul>
    </td>
    <td>
        <ul>
            @foreach (IDoor door in Model.Doors)
            {
                <li>
                    @string.Format("{0}", door.IsOpen)
                </li>

            }

        </ul>
    </td>
</table>
<div>

    @using (Html.BeginForm("Delete","Vehicles",FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" a /> |
            @Html.ActionLink("Back to List", "Index")

        </div>
    }
</div>
