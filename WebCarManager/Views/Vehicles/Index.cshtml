@using CarManagement.Core.Models.DTOs

@model IEnumerable<CarManagement.Core.Models.DTOs.VehicleDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Enrollment</th>
        <th>Actions</th>
    </tr>

    @foreach (VehicleDto vehicle in this.Model)
    {
        string enrollment = $"{@vehicle.Enrollment.Serial} - {@vehicle.Enrollment.Number.ToString("0000")}";
        <tr>
            <td>
                @Html.ActionLink(@enrollment, "Detalles", new
           {
               serial = vehicle.Enrollment.Serial,
               number = vehicle.Enrollment.Number
           }//, new
           //{
             //  type = "submit;",
               //onclick = "function()" +
               //"{document.location.href = };"
           //}
           )
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new
                    {
                        serial =vehicle.Enrollment.Serial,
                        number =vehicle.Enrollment.Number
                    }) |
                @Html.ActionLink("Delete", "Delete", new
                    {
                        serial = vehicle.Enrollment.Serial,
                        number = vehicle.Enrollment.Number
                    })
            </td>
        </tr>
    }

</table>
